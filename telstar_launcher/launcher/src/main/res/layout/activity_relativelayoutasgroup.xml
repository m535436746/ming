            android:textColor="@android:color/white"
            android:textSize="@dimen/px45"
            android:text="@string/miracast_setting"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/px100"
            android:gravity="center_horizontal"/>
        </RelativeLayout>




    <RelativeLayout
        android:id="@+id/media_center"
        android:layout_width="@dimen/px380"
        android:layout_height="@dimen/px295"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px10"
        android:layout_toRightOf="@+id/miracast_setting"
        android:focusable="true"
        android:background="@drawable/cursor_rectangle_orange" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px100"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/media_center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px45"
            android:text="@string/media_center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/px100"
            android:gravity="center_horizontal"/>
        </RelativeLayout>



