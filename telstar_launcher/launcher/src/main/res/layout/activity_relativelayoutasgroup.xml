            android:paddingTop="@dimen/px100"
            android:gravity="center_horizontal"/>
        </RelativeLayout>




    <RelativeLayout
        android:id="@+id/more_setting"
        android:layout_width="@dimen/px380"
        android:layout_height="@dimen/px295"
        android:layout_below="@+id/miracast_setting"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:layout_toRightOf="@+id/system_update"
        android:focusable="true"
        android:background="@drawable/cursor_rectangle_purple">
        <ImageView
            android:layout_width="wrap_content"
