    <RelativeLayout
        android:id="@+id/system_update"
        android:layout_width="@dimen/px380"
        android:layout_height="@dimen/px295"
        android:layout_below="@+id/network_setting"
        android:layout_marginLeft="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:layout_toRightOf="@+id/projector_setting"
        android:focusable="true"
        android:background="@drawable/cursor_rectangle_blue" >
