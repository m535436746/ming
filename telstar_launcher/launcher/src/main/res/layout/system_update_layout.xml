<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/menu_left"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="35dp"
            android:text="System Update"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:layout_height="50dp">
        <TextView
            android:text=" Current version："
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtversion"
            android:text="1.0.0"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_height="120dp"
            android:id="@+id/progressBar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <!-- 环形 有字-->
        <reco.frame.tv.view.TvProgressBar
            android:id="@+id/download_progressBar"
            android:layout_width="@dimen/px1030"
            android:layout_height="@dimen/px40"
            tv:textDisplayable="true"
            android:layout_centerHorizontal="true"
            tv:backgroundColor="#ddd"
            tv:progressStartColor="@android:color/darker_gray"
            tv:progressEndColor="@android:color/darker_gray"
            tv:style="RECT"
            tv:textColor="@android:color/holo_red_light"
            tv:rectRadius="@dimen/px10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        android:gravity="center"
        android:layout_height="100dp">

           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="@string/ota_up_to_date"
            android:id="@+id/txtUpdateInfo"
               android:gravity="center"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/grp_new_version"
        android:visibility="visible"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:text="@string/btn_download"
            android:id="@+id/btn_download" />

    </RelativeLayout>




</LinearLayout>
