<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01122b">

    <reco.frame.tv.view.TvTabHost
        android:id="@+id/tth_container"
        android:layout_width="@dimen/px1920"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/px980"
        tv:cursorRes="@drawable/cursor_shine"
        tv:textColorDefault="@android:color/white"
        tv:textColorSelected="@android:color/holo_orange_light"
        tv:textSize="@dimen/px45"
        tv:titleWidth="@dimen/px250"
        tv:titleHeight="@dimen/px60"
        tv:cursorWidth="@dimen/px250"
        tv:cursorHeight="@dimen/px60"
        tv:cursorMarginTop="@dimen/px42"
        tv:titleSpace="@dimen/px25"
        tv:dividerHeight="@dimen/px20"
        tv:durationScroll="400"
         />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginTop="@dimen/px10"
            android:orientation="horizontal"
            android:layout_gravity="top|right">

            <GridView
                android:id="@+id/list_status"
                android:scrollbars="none"
                android:drawSelectorOnTop="false"
                android:verticalSpacing="0dip"
                android:horizontalSpacing="0dip"
                android:numColumns="4"
                android:fadingEdgeLength="48dip"
                android:cacheColorHint="#00000000"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:focusable="false"
                android:layoutDirection="rtl"
                android:layout_marginRight="@dimen/px40"
                />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px35"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/px20"
                android:layout_marginTop="@dimen/px15"
                android:text="@string/hello_world"/>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px35"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/px20"
                android:layout_marginTop="@dimen/px15"
                android:text="@string/hello_world"/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>